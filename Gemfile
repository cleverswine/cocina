source 'http://rubygems.org'

gem 'rails', '~> 3.2'
gem 'mysql2', :group => :production
gem 'sqlite3', :groups => [:development, :test]

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'  
  gem 'bootstrap-sass'
  gem 'coffee-rails'
  gem 'uglifier'  
end

gem 'jquery-rails'

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby'

# for tagging
gem 'acts-as-taggable-on', '~> 2.3'

# for image uploading (ruby 1.8.7 only supports up to paperclip 2.7)
gem 'paperclip', '~> 2.7'

# for pagination
gem 'kaminari', '~> 0.13'

# for screen scraping
gem 'nokogiri', '~> 1.5'

# to address: Could not find a JavaScript runtime.
gem 'execjs', :group => :production
gem 'therubyracer', :group => :production

